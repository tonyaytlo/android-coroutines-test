<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   app:cardCornerRadius="@dimen/card_corner_radius"
                                   android:layout_margin="@dimen/margin_padding_xtiny"
                                   tools:context=".presentation.ui.news_feed.NewsFeedActivity"
                                   android:layout_height="@dimen/item_list_height">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:background="@color/colorCardBackground"
                                                       android:layout_height="match_parent">

        <TextView
                tools:text="2014-02-17T12:05:47Z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPubDate"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorTextGray"
                android:layout_marginBottom="@dimen/margin_padding_small"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                tools:text="Politics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSection"
                android:textColor="@color/colorTextGray"
                android:ellipsize="marquee"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:layout_marginBottom="@dimen/margin_padding_small"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <View android:layout_width="0dp"
              android:layout_height="@dimen/divider_height"
              android:background="@color/colorDividerLight"
              app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
              app:layout_constraintEnd_toEndOf="@id/tvPubDate"
        />
        <TextView
                tools:text="Alex Salmond speech – first minister hits back over Scottish independence – live"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tvTitle"
                android:textColor="@color/colorTextLight"
                android:layout_marginTop="@dimen/margin_padding_small"
                android:ellipsize="marquee"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="@dimen/margin_padding_tiny"
                app:layout_constraintBottom_toTopOf="@+id/tvSection"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_padding_small"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_padding_small"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>